<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_card_on_image_big_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_card_on_image_normal_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_card_description_style">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_card_content_style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_card_content_big_style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>